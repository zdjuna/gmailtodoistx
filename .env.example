# Gmail API Configuration
GMAIL_CREDENTIALS_PATH=./credentials.json
GMAIL_TOKEN_PATH=./token.json
POLLING_INTERVAL=300  # 5 minutes in seconds

# Google Cloud Secret Manager (only needed for GCP deployment)
# GMAIL_CREDENTIALS_SECRET=gmail-credentials  # Name of the secret containing Gmail credentials
# GMAIL_TOKEN_SECRET=gmail-token  # Name of the secret containing Gmail token

# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7

# Todoist API Configuration
TODOIST_API_KEY=your_todoist_api_key

# Application Configuration
LOG_LEVEL=info
LOG_FILE=./app.log
